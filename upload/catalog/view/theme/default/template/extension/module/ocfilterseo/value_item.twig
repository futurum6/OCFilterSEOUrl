{% set class = 'ocf-value ocf-' ~ filter.type %}
{% if value.selected %}
  {% set class = class ~ ' ocf-selected' %}
{% elseif not value.count %}
  {% set class = class ~ ' ocf-disabled' %}
{% endif %} 


{% if value.seo_url and class != 'ocf-disabled' %}
  <div  id="ocf-v-{{ value.id }}-{{ index }}" class="{{ class }}" data-filter-key="{{ filter.filter_key }}" data-value-id="{{ value.value_id }}">
{% else %}
<button type="button" id="ocf-v-{{ value.id }}-{{ index }}" class="{{ class }}" data-filter-key="{{ filter.filter_key }}" data-value-id="{{ value.value_id }}">
{% endif %}

  {% if not value.color and not value.image %}
  <span class="ocf-value-input ocf-value-input-{{ filter.type }}"></span>
  {% elseif value.color %}
  <span class="ocf-value-color" style="background-color: #{{ value.color }};"></span>
  {% elseif value.image %}
  <span class="ocf-value-image" style="background-image: url({{ value.image }});"></span>
  {% endif %}
  {% if value.seo_url %}<a href="{{ value.seo_url }}" style="color: currentColor;">{% endif %}
  <span class="ocf-value-name">{{ value.name }}</span>
  {% if value.seo_url %}</a>{% endif %}
  {% if show_counter %}
  <span class="ocf-value-append">   
    <span class="ocf-value-count">{{ value.count }}</span>
  </span>
  {% endif %}

{% if value.seo_url %}
  </div>
{% else %}
  </button>
{% endif %}

